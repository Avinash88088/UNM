# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:50000

# Firebase Configuration
FIREBASE_PROJECT_ID=universal-document-master
FIREBASE_DATABASE_URL=https://universal-document-master.firebaseio.com
FIREBASE_STORAGE_BUCKET=universal-document-master.appspot.com
# Optional: Service account key (for production)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Database Configuration (Legacy - can be removed)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/udm
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=udm
# DB_USER=postgres
# DB_PASSWORD=password

# Redis Configuration (Legacy - can be removed)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-document-master-storage

# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/google-cloud-key.json

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Gemini AI API
GEMINI_API_KEY=your-gemini-api-key

# File Upload Configuration
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,tiff
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:50000
